body
    margin 0 !important
    padding 0
    background-color $page-bg

table
    border-spacing 0
    font-family sans-serif
    font-size $base-font-size
    color $text-color
    background-color $content-bg

td
    padding 0

img
    border 0

div[style*="margin: 16px 0"]
    margin 0 !important

.wrapper
    width 100%
    table-layout fixed
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%

.webkit
    max-width $content-width
    margin 0 auto

.outer {
	Margin: 0 auto;
    width: 100%;
    max-width: $content-width;
}